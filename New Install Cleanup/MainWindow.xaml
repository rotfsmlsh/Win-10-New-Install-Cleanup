<Window x:Name="Cleanup_Selection_Window" x:Class="New_Install_Cleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_Install_Cleanup"
        mc:Ignorable="d"
        Title="Cleanup Selection" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="feature_removal_groupbox" Header="Remove Features" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="230">
            <DataGrid x:Name="options_datagrid" HorizontalAlignment="Left" Height="340" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="options_datagrid_SelectionChanged"/>
        </GroupBox>

    </Grid>
</Window>
