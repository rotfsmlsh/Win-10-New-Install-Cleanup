<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_Install_Cleanup"
        xmlns:Properties="clr-namespace:New_Install_Cleanup.Properties" x:Name="Cleanup_Selection_Window" x:Class="New_Install_Cleanup.MainWindow"
        mc:Ignorable="d"
        Title="Ammonia - Default Applications" Height="406" Width="408" ResizeMode="NoResize">
    <Grid Margin="0,0,2,0">
        <ListBox x:Name="listbox_features" Margin="10,35,9,47" SelectionMode="Multiple" SelectionChanged="listbox_features_SelectionChanged"/>
        <Button x:Name="btn_executeCleanup" Content="Execute" Margin="0,0,9,9" HorizontalAlignment="Right" Width="100" Height="27" VerticalAlignment="Bottom" Click="btn_executeCleanup_Click" IsEnabled="False"/>
        <Label Content="Features:" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="225"/>
        <Button x:Name="btn_clearSelection" Content="Clear Selection" Margin="10,0,0,9" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Click="btn_clearSelection_Click" IsEnabled="False"/>
    </Grid>
</Window>
